<b>Product Description Query </b> {{query}}

<form method="POST" action="/products">
<ul>
    {{#each products}}
        <li>{{this.name}} - {{this.description}} - {{this.quantity}} - <input name="{{this._id}}input"><button name="productId" value="{{this._id}}">Add to Cart</button></li>
    {{else}}
        No results
    {{/each}}
</ul>
</form>
